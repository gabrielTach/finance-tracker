<div class="results-block mb-4">
  <%= render 'layouts/messages' %>
</div>
<% if @friends %>
  <div class="card card-header results-block mb-4">
    <table class="col-md-12"->
      <tbody>
        <% @friends.each do |friend| %>
          <tr>
            <td><strong>Name: </strong> <%= friend.full_name %></td>
            <td><strong>Email: </strong> <%= friend.email %></td>
            <td>
              <strong>Profile: </strong> <%= link_to "View profile",'#', class:'btn btn-sm btn-secondary' %>
              <% if current_user.not_friends_with?(friend.id) %>
                <%= link_to 'Add ', friendships_path(friend: friend), class: 'btn btn-sm btn-success', method: :post %>
              <% else %>
                <span class="badge">
                  You are friends
                </span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
  </div>
<% end %>
