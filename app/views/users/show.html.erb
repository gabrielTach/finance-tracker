<h2>User Details</h2>
<div class="results-block mb-4">
  <%= render 'layouts/messages' %>
</div>
<div class="card card-header results-block mb-4">
  <table class="col-md-12"->
    <tbody>
      <tr>
        <td><strong>Name: </strong> <%= @user.full_name %></td>
        <td><strong>Email: </strong> <%= @user.email %></td>
        <td>
          <% if current_user.not_friends_with?(@user.id) %>
            <%= link_to 'Add ', friendships_path(friend: @user), class: 'btn btn-sm btn-success', method: :post %>
          <% else %>
            <span class="badge">
              You are friends
            </span>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
<% if !@tracked_stocks.empty? %>
  <%= render 'stocks/list' %>
<% else %>
  <p class='lead'>This user is not tracking any stocks</p>
<% end %>
